/* Main Style for all file
/* Must keep */
/* Font Import */
@import url('https://fonts.googleapis.com/css2?family=Poppins&display=swap');
:root {
    --brown: #261700;
    --pink: #F7E4D7; 
    --black : #28282B;
    --white: #F9F6EE;
    --btnRed: #FFCCCB;
    --btnGreen: #90EE90;
}
* {
    box-sizing: border-box;
    font-family: 'Poppins', sans-serif;
    color: var(--black);
}
html {
    scroll-behavior: smooth;
    font-family: 'Poppins', sans-serif;
}
body {
    margin: 0;
    padding: 0;
}

/* Page Styling */
.registration-wrapper {
    display: flex;
    justify-content: space-between;
    gap: 1rem;
}


/* left content */
.left-content {
    flex: 1;
    min-height: 100vh;
    position: relative;
    background: url(registrationbg.png) no-repeat fixed;
    background-size: 50% 100vh;
}
.content-wrapper {
    position: absolute;
    width: 100%;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;

}

.direction-wrapper {
    margin-top: 16px;
    width: 85%;
    padding-inline: 8px;
    
}
.direction-wrapper * {
    text-align: justify;
    font-weight: 600;
	color: white;
}

/* right content */
.right-content {
    flex: 1;
    display: flex;
    justify-content: center;
    padding: 2rem 0 1rem;
}
.registration-part {
    font-size: 2rem;
    font-weight: 900;
    display: none;
}
.form-wrapper {
    width: min(90%, 400px);
    padding: 1rem;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    border-radius: 10px;
    box-shadow: 0 0 7px 0.2px var(--brown);
    position: relative;
}
.progress-wrapper {
    align-self: center;
    width: 50%;
    position: relative;
}
.progress:nth-child(1) {
    position: absolute;
    top: 0;
    width: 1rem;
    left: 0;
    aspect-ratio: 1/1;
    border-radius: 50%;
    z-index: 1;
    background-color: #25a18e;
}
.progress:nth-child(3) {
    border: 1px solid var(--black);
    width: 1rem;
    right: 0;
    aspect-ratio: 1/1;
    border-radius: 50%;
    position: absolute;
    top: 0;
    z-index: 1;
    background-color: white;
}
.form-heading {
    width: 100%;
    text-align: center;
    font-size: 1.5rem;
    font-weight: 600;
    margin: 0.5rem 0;
}
.form-content {
    display: flex;
    flex-direction: column;
    justify-content: stretch;
}
.form-input {
    display: flex;
    flex-direction: column;
}
.form-input > span {
    font-size: 0.75rem;
    font-weight: 500;
}
.password-space {
    position: relative;
}
.password-space i {
    position: absolute;
    right: 5%;
    top: 50%;
    transform: translate(0, -50%);
}
.pass-requirements {
    margin: 0.5rem 0;
    padding: 0.5rem;
	background-color: #efe9f4;
}
.pass-requirements > span {
    font-weight: 600;
}
.requirement {
    font-size: 0.75rem;
}
input {
    width: 100%;
    padding: 0.25rem 0.5rem;
}

/* for buttons */
button {
    cursor: pointer;
    transition: 0.6s ease;
}
button:hover:not(#clearBtn) {
    scale: 1.1;
}
.backbtn {
    position: absolute;
    top: 1rem;
    left: 1rem;
    border: none;
    background-color: var(--black);
    border-radius: 50%;
    width: 2rem;
    aspect-ratio: 1/1;
}
.backbtn i {
    color: var(--white);
    font-weight: 900;
}
.form-btnarea {
    width: 80%;
}
.button-area, .form-btnarea {
    margin-top: 3rem;
    display: flex;
    justify-content: space-between;
}
.button-area button, .form-btnarea button {
    width: 5rem;
    padding: 0.5rem 1rem;
    border-radius: 25px;
    border: none;
    font-weight: 600;
}
.form-btnarea button:first-child {
    background-color: var(--btnRed);
    color: red;
}
.button-area button:nth-child(2), .form-btnarea button:nth-child(2) {
    background-color: var(--btnGreen);
    color: green;
}
.error.pass {
    display: none;
}
.contactnum {
    display: flex;
    gap: 4px;
}
.contactnum input:first-child {
    flex: 1;
}
.contactnum input:nth-child(2) {
    flex: 8;
}
#clearBtn {
    border: none;
    color: var(--black);
    box-shadow: none;
    background-color: #e8e8e8;
    transition: unset;
}
#clearBtn:hover {
    color: red;
    text-decoration: underline;
}

/* popup form */ 
#clearForm, #submitForm {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 9999;
    background-color: rgba(0, 0, 0, 0.4);
}
.popupForm {
    background-color: white;
    border-radius: 20px;
    box-shadow: 0 0 10px var(--black);
    padding: 1rem;
    width: min(80%, 250px);
    text-align: center;
    display: flex;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

/* for error message */ 
.error {
    font-size: 0.6rem;
    color: red;
    font-weight: 600;
}

/* screen size control */
/* query screen size for font change */
@media screen and (width <= 767px) {
    .nav-content * {
        font-size: 0.8rem;
    }
    .registration-wrapper {
        min-height: 100vh;
        align-items: center;
        gap: unset;
        background: url(photos/Background-Registration.jpg) center/cover no-repeat fixed;
    }
    .left-content {
        display: none;
    }
    .right-content {
        flex-direction: column;
        align-items: center;
        gap: 1rem;
    }
    .form-wrapper {
        background: white;
    }
    .registration-part, .registration-part * {
        display: block;
        color: var(--white);
    }
}